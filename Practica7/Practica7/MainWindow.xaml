<Window x:Class="Practica7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Ширина комнаты"/>
            <TextBox x:Name="RoomWidth"/>
            <TextBlock Text="Длина комнаты"/>
            <TextBox x:Name="RoomLength"/>
            <TextBlock Text="Высота комнаты"/>
            <TextBox x:Name="RoomHeight"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Ширина двери"/>
            <TextBox x:Name="DoorframeWidth"/>
            <TextBlock Text="Высота двери"/>
            <TextBox x:Name="DoorframeHeight"/>
            <TextBlock Text="Ширина окна"/>
            <TextBox x:Name="WindowWidth"/>
            <TextBlock Text="Высота окна"/>
            <TextBox x:Name="WindowHeight"/>
        </StackPanel>
                <StackPanel Grid.Column="2" Margin="10">
            <TextBlock Text="Ширина обоев"/>
            <TextBox x:Name="WallpaperWidth"/>
            <TextBlock Text="Ширина линолеума"/>
            <TextBox x:Name="Linoleum"/>
            <TextBlock Text="Расход краски на 1 м.кв."/>
            <TextBox x:Name="PaintConsumption"/>
            <TextBlock Text="Объём могу краски"/>
            <TextBox x:Name="CanVolume"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1"  Margin="10">
            <TextBlock x:Name="Method1" Text="Количество рулонов"/>
            <Button Name="Method1Result" Content="Hello" Click="Method1Result_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1"  Margin="10">
            <TextBlock x:Name="Method2" Text="Количество линолеума"/>
            <Button Name="Method2Result" Content="Hello" Click="Method2Result_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="1"  Margin="10">
            <TextBlock x:Name="Method3" Text="Количество могу краски"/>
            <Button Name="Method3Result" Content="Hello" Click="Method3Result_Click"/>
        </StackPanel>
    </Grid>
</Window>
